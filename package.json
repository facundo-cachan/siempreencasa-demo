{
  "name": "siempreencasa-challenge",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "npx prettier --write ."
    ],
    "*": [
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-all"
    }
  },
  "scripts": {
    "clean": "rm -rf .next;rm ./graphql/queries/*.graphql.d.ts;rm .env.local;rm public/*.js",
    "dev": "NODE_ENV=test next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --check --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest --update-snapshot --detectOpenHandles --watchAll",
    "coverage": "jest --collect-coverage",
    "cypress:open": "cypress open",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "analyzer": "ANALYZE=true NODE_ENV=test next build && yarn start",
    "development": "cp .env.development .env.local && NODE_ENV=development yarn build && yarn start",
    "production": "cp .env.production .env.local && NODE_ENV=production yarn build && yarn start"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "next": "12.1.6",
    "next-auth": "^4.3.4",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.17.12",
    "@next/bundle-analyzer": "^12.1.6",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.186",
    "@swc/jest": "^0.2.21",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@zeit/next-sass": "^1.0.1",
    "cypress": "^9.6.1",
    "eslint": "^8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": "^12.4.1",
    "next-pwa": "^5.5.2",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "react-test-renderer": "^18.1.0",
    "sass": "^1.51.0",
    "swc-loader": "^0.2.1",
    "typescript": "^4.6.4"
  }
}
